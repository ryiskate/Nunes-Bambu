<div class="row">
<strong><%= @product.name %></strong>
</div>

<div class="row">
  <p>
   <% @product.images.each do |i| %>
   <div class="col-md-4">
   <%= image_tag i.img.url(:medium) %>
   </div>
   <% end %>
  </p>
</div>

<div class = "users classify">
  <% if user_signed_in? %>
    <%= render "rates/rateIdentifier" %>
  <% else %>
    <h5> Entre para avaliar ou comprar o produto </h5>
  <% end %>
</div>

<div class="row">
  <strong>Descrição:</strong> <%= @product.description%> 
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <div class="row">
      <strong>Preço:</strong> $<%= @product.price %>
    </div>
    <% if user_signed_in? %>
      <%= render 'orders/add_item' %>
    <% end %>
  </div>
</div>
<h3>Comentários</h3>

<%= react_component('CommentBox', {product_id: @product.id}) %>
