<div class = "form-group">
    <%= form_for :lamp, url: lamps_path do |f| %>
    
    <p>
        <%= f.label :name%><br>
        <%= f.text_field :name%> 
    </p>
    
    <p>
        <%= f.label :description%><br>
        <%= f.text_area :description%>
    </p>
    
    <p>
        <%= f.label :price%><br>
        <%= f.number_field :price%>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
    
    <% end %>
</div>