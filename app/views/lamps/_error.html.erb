<% if @lamp.errors.any? %>
    <div id="errors_explanation">
        <h2>
            <%= pluralize(@lamp.errors.count, "Erro") %>: Não foi possivel gravar essa luminária:
        </h2>
        <ul>
            <% @lamp.errors.full_messages.each do |e| %>
            <li><%= e %></li>
            <% end %>
        </ul>
    </div>
<% end %>