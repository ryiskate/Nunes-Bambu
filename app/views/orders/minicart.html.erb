<div class="minicart">
  <div class="close-button" align="right">
    <a href="#" class="fa fa-times" id="close" aria-hidden="true"></a>
  </div>
  <div class="product-list">
    <% @order.order_items.each do |item| %>
      <div class="row">
        <div class="col-md-2"><%= image_tag item.product.main_image(:thumb) %></div>
        <div class="col-md-6"><%= item.product.name %></div>
        <div class="col-md-1"><%= item.quantity %></div>
        <div class="col-md-3"><%= item.value %></div>
      </div>
    <% end %>
  </div>
  <div class="total-value">
    Total: R$ <%= @order.total_value %>
  </div>
  <div class="go-to-cart">
    <%= link_to 'Ir para o carrinho', cart_path, class: 'btn btn-primary' %>
  </div>
</div>

    